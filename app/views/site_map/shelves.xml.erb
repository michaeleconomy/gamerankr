<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% @shelves.each do |id, title, last_review| %>
    <url>
      <loc><%= shelf_url("#{id}-#{title.gsub(/[^\w]/, '-')}") %></loc>
      <lastmod><%= last_review.strftime("%Y-%m-%d") %></lastmod>
    </url>
  <% end %>
</urlset>