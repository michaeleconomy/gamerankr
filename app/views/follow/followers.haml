- @title = "#{@user.real_name}'s Followers"
.breadCrumbs
  = link_to "Users", users_path
%h1
  = link_to_ar @user
  &gt;
  Followers
.contentBlock
  - if @followers.empty?
    No followers yet.
  - else
    - @followers.each do |follower|
      .user
        = link_to_ar follower.follower
    = will_paginate @followers