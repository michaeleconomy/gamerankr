#header
  = link_to image_tag("logo3.png", :alt => 'GameRankr'), "/", :class => 'logo'
  .nav
    = link_to "Home", "/"
    = link_to "My Games", my_games_path, :rel => "nofollow"
    = link_to "Friends", friends_path, :rel => "nofollow"
    - if signed_in?
      = link_to "Profile", current_user
    - else
      = link_to_fb_connect
  = form_tag(search_path(:source => params[:source]), :method => :get) do
    - if params[:search_source]
      = hidden_field_tag(:search_source, params[:search_source])
    %span
      = text_field_tag(:query, params[:query],
        :data => {:default => "Search for a game"}) + submit_tag("", :class => 'search', :name => nil)