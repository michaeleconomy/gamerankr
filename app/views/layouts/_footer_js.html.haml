= javascript_include_tag "application"
- if @defered_js
  = javascript_include_tag @defered_js
%script(async=true src="https://www.googletagmanager.com/gtag/js?id=UA-19936293-1")
:javascript
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-19936293-1');

  window.fbAsyncInit = function() {
    FB.init({appId: '#{Secret[:facebook_app_id]}', status: true, cookie: true,
             xfbml: true});
    $(document).trigger("facebook:loaded")
  };
  (function() {
    var e = document.createElement('script')
    e.async = true
    e.src = document.location.protocol +
      '//connect.facebook.net/en_US/all.js'
    document.getElementById('fb-root').appendChild(e)
  }());