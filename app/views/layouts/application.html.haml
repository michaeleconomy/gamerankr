<!DOCTYPE html>
%html
  %head
    %title
      GameRankr -
      = @title || "Rate and Review Video Games With Friends"
    = stylesheet_link_tag "application"
    = csrf_meta_tag
    = render "layouts/metatags"
  %body
    = render "layouts/header"
    #main
      - [:notice, :error].each do |flash_item|
        - unless flash[flash_item].blank?
          .flash{:id => flash_item}
            = h flash[flash_item]
            %a.right.closeLink(href="#") x
      = yield
    = render "layouts/footer"
    #fb-root
    #addShelves.hidden
      - current_shelves.each do |shelf|
        %a{:shelf_id => shelf.id, :shelf_name => shelf.name}
          = shelf.name
    = render "layouts/footer_js"